@charset "UTF-8";

element.style{
	font-family : 'Pretendard-Regular';
}

hr{
	background:#f3f2f2;
    height:1px;
    border:0;
}

.cont{
	border : none;
	border-top:1px solid #ccc;
	display:flex;
	flex-direction: column;
	gap:15px;
}

.inner h1{
	margin:25px 0;
	font-size : 1.2em;
	color : #6E6E6E;
}

.innerCont{
	display : flex;
	position : relative;
}
.text{
	width : 200px;	
}

.item{
	display : flex;
	flex-direction : column;
	padding-bottom : 20px;
	width : 340px;
}
#prod_img{
	width : 90px;
	height : 90px;
}
label{
	display : flex;
	align-items : center;
	margin : 5px 0;
}
input[type="checkbox"]{
	margin-right : 10px;
}
.item2{
	width : 545px;
}
.item4{
	border : 1px solid #ccc;
	padding : 5px;
	width : 400px;
	margin-bottom : 10px;
}
.pay{
	display : flex;
	flex-direction : row;
	padding : 10px;
}
.text2{
	width : 150px;
}
.bal{
	position : absolute;
	right : 50px;
}
#bal{
	position : absolute;
	right : 50px;
}
.innerGray{
	background-color : #ccc;
	height : 150px;
}
.order{
	position : absolute;
	right : 120px;
}
#order{
	background-color : #9B59B6;
	margin-left : 5px;
	color : white;
	margin : 10px;
	width : 200px;
	height : 50px;
	border : none;
	cursor : pointer;
	font-size : 1.3em;
	font-family : 'Pretendard-Regular';
}